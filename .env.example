# bili_curator 环境变量配置示例

# 版本控制
VERSION=v6

# 目录配置
DOWNLOAD_HOST_PATH=/Volumes/nas-mk/xiaoya_emby/xiaoya/bilibili
STRM_HOST_PATH=/Volumes/nas-mk/xiaoya_emby/xiaoya/bilibili_strm
CONFIG_HOST_PATH=~/bilibili_config

# 基础配置
TZ=Asia/Shanghai
DEDUP_SCOPE=subscription
DEDUP_SCAN_FILESYSTEM=0
BATCH_IN_SIZE=500

# STRM配置 (仅V7使用)
STRM_DEFAULT_QUALITY=720p
STRM_CACHE_TTL=300
STRM_MAX_CONCURRENT_STREAMS=10
STRM_RATE_LIMIT_PER_IP=5

# B站认证 (STRM模式必需)
BILIBILI_SESSDATA=
BILIBILI_BILI_JCT=
BILIBILI_BUVID3=
